<%- include('../partials/header') %>
<h2>Edit Bug</h2>
<form method="post" action="/bugs/<%= bug._id %>?_method=PUT">
  <div class="mb-2">
    <label class="form-label">Title</label>
    <input name="title" class="form-control" value="<%= bug.title %>" required/>
  </div>
  <div class="mb-2">
    <label class="form-label">Description</label>
    <textarea name="description" class="form-control"><%= bug.description %></textarea>
  </div>
  <div class="mb-2">
    <label class="form-label">Severity</label>
    <select name="severity" class="form-select">
      <option value="Low" <%= bug.severity==='Low'?'selected':'' %>>Low</option>
      <option value="Medium" <%= bug.severity==='Medium'?'selected':'' %>>Medium</option>
      <option value="High" <%= bug.severity==='High'?'selected':'' %>>High</option>
    </select>
  </div>
  <div class="mb-2">
  <% if (userRole === 'admin') { %>
  <div class="mb-2">
    <label class="form-label">Status</label>
    <select name="status" class="form-select">
      <option value="Open" <%= bug.status==='Open'?'selected':'' %>>Open</option>
      <option value="In Progress" <%= bug.status==='In Progress'?'selected':'' %>>In Progress</option>
      <option value="Closed" <%= bug.status==='Closed'?'selected':'' %>>Closed</option>
    </select>
  </div>
<% } %>
  </div>
  <button class="btn btn-primary">Update</button>
  <a class="btn btn-secondary" href="/bugs/<%= bug._id %>">Cancel</a>
</form>
<%- include('../partials/footer') %>
